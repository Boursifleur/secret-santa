<div class="container h-600 mt-5">
  <div class=row>
    <div class="col-6">
      <h3>My events</h3>
        <% @events.each do |event| %>
        <div class="card p-1 h-200 w-400 mt-3">
          <%= event.name %>
          <%= link_to " ", event_path(event), class: "cards-link"%>
        </div>

        <% end %>
    </div>
    <div class="col-6">
      <h3>Create a new event</h3>
      <%= simple_form_for @event do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.button :submit, class: "btn btn-advice"%>
      <% end %>
    </div>

  </div>
</div>
